# Configurações do HealthGo
# Copie este arquivo para .env e ajuste as configurações

# =============================================================================
# CONFIGURAÇÕES DO BACKEND
# =============================================================================

# Servidor
SERVER_PORT=8080
SERVER_CONTEXT_PATH=/

# Banco de Dados PostgreSQL
SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/healthgo
SPRING_DATASOURCE_USERNAME=healthgo_user
SPRING_DATASOURCE_PASSWORD=healthgo_pass
SPRING_DATASOURCE_DRIVER_CLASS_NAME=org.postgresql.Driver

# JPA/Hibernate
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_JPA_PROPERTIES_HIBERNATE_DIALECT=org.hibernate.dialect.PostgreSQLDialect
SPRING_JPA_PROPERTIES_HIBERNATE_FORMAT_SQL=true

# Redis Cache
SPRING_REDIS_HOST=redis
SPRING_REDIS_PORT=6379
SPRING_REDIS_TIMEOUT=2000ms

# JWT Security
JWT_SECRET=sua-chave-secreta-muito-segura-aqui-2024
JWT_EXPIRATION=86400000

# WebSocket
SPRING_WEBSOCKET_MAX_TEXT_MESSAGE_SIZE=8192
SPRING_WEBSOCKET_MAX_BINARY_MESSAGE_SIZE=8192

# CORS
SPRING_WEB_CORS_ALLOWED_ORIGINS=*
SPRING_WEB_CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
SPRING_WEB_CORS_ALLOWED_HEADERS=*

# Performance
SPRING_JPA_PROPERTIES_HIBERNATE_JDBC_BATCH_SIZE=20
SPRING_JPA_PROPERTIES_HIBERNATE_ORDER_INSERTS=true
SPRING_JPA_PROPERTIES_HIBERNATE_ORDER_UPDATES=true

# Monitoramento
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE_INCLUDE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=always

# Logging
LOGGING_LEVEL_BR_COM_HEALTHGO=INFO
LOGGING_LEVEL_ORG_SPRINGFRAMEWORK_WEB=INFO
LOGGING_LEVEL_ORG_HIBERNATE_SQL=DEBUG
LOGGING_LEVEL_ORG_HIBERNATE_TYPE_DESCRIPTOR_SQL_BASICBINDER=TRACE

# =============================================================================
# CONFIGURAÇÕES DO FRONTEND
# =============================================================================

# API URLs
REACT_APP_API_URL=http://localhost:8080
REACT_APP_WS_URL=ws://localhost:8080/ws

# Build
REACT_APP_VERSION=1.0.0
REACT_APP_NAME=HealthGo Monitor

# =============================================================================
# CONFIGURAÇÕES DO SIMULADOR
# =============================================================================

# Backend URLs
BACKEND_URL=http://localhost:8080
WS_URL=ws://localhost:8080/ws

# Intervalo de envio (em milissegundos)
INTERVALO_ENVIO=200

# Arquivos CSV
CSV_PACIENTE_001=dados/dados_pac001.csv
CSV_PACIENTE_002=dados/dados_pac002.csv
CSV_PACIENTE_003=dados/dados_pac003.csv

# =============================================================================
# CONFIGURAÇÕES DO BANCO DE DADOS
# =============================================================================

# PostgreSQL
POSTGRES_DB=healthgo
POSTGRES_USER=healthgo_user
POSTGRES_PASSWORD=healthgo_pass
POSTGRES_PORT=5432

# Redis
REDIS_PORT=6379
REDIS_PASSWORD=

# =============================================================================
# CONFIGURAÇÕES DE MONITORAMENTO
# =============================================================================

# Prometheus
PROMETHEUS_PORT=9090
PROMETHEUS_RETENTION_TIME=200h

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# CONFIGURAÇÕES DE SEGURANÇA
# =============================================================================

# Criptografia
PSEUDOANONIMIZACAO_SALT=salt-secreto-para-pseudoanonimizacao
ENCRYPTION_KEY=chave-de-criptografia-aes-256

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=1000
RATE_LIMIT_BURST_SIZE=20

# =============================================================================
# CONFIGURAÇÕES DE LGPD
# =============================================================================

# Retenção de dados (em anos)
RETENCAO_DADOS_ATIVOS=5
RETENCAO_DADOS_INATIVOS=2
RETENCAO_LOGS_AUDITORIA=10
RETENCAO_BACKUPS=7

# Contato do DPO
DPO_EMAIL=dpo@healthgo.com.br
DPO_TELEFONE=(11) 99999-9999

# =============================================================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# =============================================================================

# Debug
DEBUG=false
DEV_MODE=false

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/healthgo.log

# =============================================================================
# CONFIGURAÇÕES DE PRODUÇÃO
# =============================================================================

# SSL/TLS
SSL_ENABLED=false
SSL_KEY_STORE=classpath:keystore.p12
SSL_KEY_STORE_PASSWORD=${SSL_PASSWORD}

# Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 0 2 * * ?
BACKUP_RETENTION_DAYS=30

# Alertas
ALERT_EMAIL=alerts@healthgo.com.br
ALERT_WEBHOOK=https://hooks.slack.com/services/... 